<?xml version="1.0" encoding="UTF-8"?>

<!-- Các file .jsp trong page nằm trong thư mục /decorators -->
<decorators defaultdir="/decorators">
    <!-- Any urls that are excluded will never be decorated by Sitemesh -->
    <excludes>
        <pattern>/api*</pattern>
    </excludes>
    
    <!-- apply Sitemesh default template -->
    <decorator name="admin" page="admin.jsp">
        <pattern>/admin*</pattern>
    </decorator>
    
    <!-- Trả về giao diện web khi url có dạng /... -->
    <decorator name="web" page="web.jsp">
        <pattern>/*</pattern>
    </decorator>
    <decorator name="login" page="login.jsp">
        <pattern>/log-in</pattern>
    </decorator>    
	<decorator name="signup" page="signup.jsp">
        <pattern>/sign-up</pattern>        
    </decorator>

</decorators>